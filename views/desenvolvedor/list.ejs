                <a href="/desenvolvedor/edt/<%=desenvolvedor._id%>">
                    <img src="/images/edit.png">
                </a>
            </td>
            <td>
                <a href="/desenvolvedor/del/<%=desenvolvedor._id%>">
                    <img src="/images/lixeira.png">
